<!-- URDF Representing the Helix arm -->

<xacro:arg name="mesh_url" default="package://helix_description" />

<link name="arm_base">
  <visual>
    <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.005" radius="0.03"/>
      </geometry>
    <material name="white"/>
  </visual>
</link>

